<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.clovertech.autolibdz">
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission
        android:name="android.permission.CAMERA"
        android:required="true"
        android:requiredFeature="true" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />

    <uses-permission android:name="android.permission.INTERNET" />

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:usesCleartextTraffic="true"
        android:theme="@style/Theme.AutoLibDZ">
        <activity android:name="com.clovertech.autolibdz.activities.password.ResetPasswordActivity" />
        <activity android:name="com.clovertech.autolibdz.activities.auth.RegisterActivity" />
        <activity android:name=".activities.HomeActivity"
        android:theme="@style/Theme.AutoLibDZ"
        android:usesCleartextTraffic="true" />
        <activity
            android:name="com.clovertech.autolibdz.activities.auth.LoginActivity"
            android:label="@string/app_name"
            android:theme="@style/Theme.AutoLibDZ.NoActionBar" />

        <activity android:name=".activities.OnBoardingActivity"/>
        <activity android:name=".activities.MainActivity"/>
        <activity android:name=".activities.CarsActivity"/>
        <activity android:name=".activities.EndLocationActivity"/>
        <activity android:name=".activities.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activities.FindYourCarActivity"/>

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/map_key" />
    </application>

</manifest>